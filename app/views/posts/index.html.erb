

<div class="container">
  <div class="row">

  <div class="col-md-10">
  <div class="row">

    <% @posts.each do |post| %>
        <div class="col-md-4">
            <div class="card mt-3">
                <div class="Card-body">
                    <h4><%= link_to post.title, post %></h4>
                    <h5><%= post.content %></h5>
                    <h6><%= post.published_at %></h6>
                  
                        
                        <% if current_user && current_user.admin %>
                            <%= link_to "Edit", edit_post_path(@post), class:"btn btn-primary"%>
                            <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm:"Are you sure?"}, class:"btn btn-danger"%>
                            <%= link_to "Back", posts_path(@post), class:"btn btn-dark" %>
                        <% end %>
                            
                </div>
            </div>
        </div>
    <% end %>
    </div>
    </div>
    <div class="col-md-2">
    
        <div class="card-header" >
          Categories
        </div>
   
        <ul class="list-group">
            <% @categories.each do|category| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to category.category, posts_path(:cate =>category.id)%>
             <span class="badge bg-primary rounded-pill"><%= category.posts.count %></span>
            <% end %>
        </ul>
    </div>


    </div>
    </div>
